<%= form_with(model: question, class: "contents", data: {controller: "dynamic"}) do |form| %>
  <% if question.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_area :title, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

<br>
<br>


  <div class="my-5">
    <%= form.fields_for :answers do |answers_form| %>
    <fieldset id="0">
    <%= answers_form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
 </fieldset>


    <% end %>
 </div>

   
<br>
<br>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>

  <button data-action="dynamic#clicky" class="ml-2 rounded-lg py-3 px-5 bg-pink-300 inline-block font-medium" >+ Answer</button>
<% end %>

 

 